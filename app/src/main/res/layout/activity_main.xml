<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="Who is the 44th President of the United States?"
            android:id="@+id/question"
            android:background="@drawable/question_background"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ans1"
            android:layout_below="@id/question"
            android:textSize="30sp"
            android:text="Bill Clinton"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:background="@drawable/ans_default"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ans2"
            android:layout_below="@id/ans1"
            android:textSize="30sp"
            android:text="George H. W. Bush"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/ans_default"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
    />


    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ans3"
            android:layout_below="@id/ans2"
            android:textSize="30sp"
            android:text="Barack Obama"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/ans_default"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
    />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_visibility_black_24dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/visibility"
    />

</RelativeLayout>